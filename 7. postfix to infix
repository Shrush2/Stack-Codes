import java.util.Stack;

public class Solution {
    public static String postToInfix(String postfix) {
        Stack<String> st = new Stack<>();

        for (int i = 0; i < postfix.length(); i++) {
            char ch = postfix.charAt(i);

            if (Character.isLetter(ch)) {
                st.push(Character.toString(ch));
            } else {
                if (st.size() < 2) {
                    return "";  // Invalid postfix expression
                }
                String op2 = st.pop();
                String op1 = st.pop();
                String exp = "(" + op1 + ch + op2 + ")";
                st.push(exp);
            }
        }

        return st.size() == 1 ? st.pop() : "";
    }

    public static void main(String[] args) {
        java.util.Scanner sc = new java.util.Scanner(System.in);
        String firstLine = sc.nextLine();  // Read "5"
        String postfix = sc.nextLine();    // Read "ab+c+"
        
        // Print output in desired format
        System.out.println();              // Blank line
        System.out.println(postToInfix(postfix));
        
        sc.close();                        // Close scanner
    }
}
