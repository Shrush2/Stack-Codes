public class Solution{
    static class Stack {
        private int arr[];
        private int top;

        Stack(int capacity) {

          arr = new int[capacity];
          top = -1;
        }
        public void push(int num) {
            if(top < arr.length-1){
            top++;
            arr[top] = num;
            }
            
        }
        public int pop() {
            if(top == -1){
                return -1;
            }
              int remove = arr[top];
              top--;
            
           
            return remove;
        }
        public int top() {
            if(top == -1){
                return -1;
            }
            return arr[top];
        }
        public int isEmpty() {
            if(top == -1){
                return 1;
            }
            return 0;
        }
        public int isFull() {
            if(top == arr.length - 1){
                return 1;
            }
            return 0;
        }

        public void increment(int k, int val) {
                int limit = Math.min(k,top+1);
                for(int i = 0;i < limit;i++){
                    arr[i] += val;   //add val to the last bottom item and increment the ele val
                }
                
    }
    }
}
